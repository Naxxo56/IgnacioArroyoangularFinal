<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >

            <Button android:text="1"
                android:layout_height="match_parent">

            </Button>

            <Button android:text="2" android:layout_height="match_parent"></Button>

            <Button android:text="3" android:layout_height="match_parent"></Button>

            <Button android:text="+" android:layout_height="match_parent"></Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >

            <Button android:text="4"
                android:layout_height="match_parent">

            </Button>

            <Button android:text="5" android:layout_height="match_parent"></Button>

            <Button android:text="6" android:layout_height="match_parent"></Button>

            <Button android:text="-" android:layout_height="match_parent"></Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >

            <Button android:text="7"
                android:layout_height="match_parent">

            </Button>

            <Button android:text="8" android:layout_height="match_parent"></Button>

            <Button android:text="9" android:layout_height="match_parent"></Button>

            <Button android:text="X" android:layout_height="match_parent"></Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >

            <Button android:text="0"
                android:layout_height="match_parent"
                android:layout_span="2">

            </Button>

            <Button android:text="," android:layout_height="match_parent"></Button>

            <Button android:text="=" android:layout_height="match_parent"></Button>


        </TableRow>


    </TableLayout>

</LinearLayout>